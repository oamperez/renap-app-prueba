<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mm3"
            android:paddingRight="@dimen/mm3"
            android:paddingBottom="@dimen/mm2"
            android:paddingTop="@dimen/mm2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="normal"
                android:textSize="@dimen/Display2"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="@dimen/mg2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawableTint="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorBlack"
                android:hint="@string/email"
                android:singleLine="true"
                android:inputType="none"
                android:layout_marginTop="@dimen/mm1"
                android:drawablePadding="@dimen/mp3"
                android:paddingRight="@dimen/mm3"
                android:paddingLeft="@dimen/mm2"
                android:paddingTop="@dimen/mm1"
                android:paddingBottom="@dimen/mm1"
                android:textSize="@dimen/SubTitle" />
            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableTint="@color/colorText"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorBlack"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/mm1"
                android:drawablePadding="@dimen/mp3"
                android:paddingRight="@dimen/mm3"
                android:paddingLeft="@dimen/mm2"
                android:paddingTop="@dimen/mm1"
                android:paddingBottom="@dimen/mm1"
                android:textSize="@dimen/SubTitle" />
            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_disabled"
                android:fontFamily="sans-serif"
                android:text="@string/sign_in"
                android:textStyle="normal"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/mm3"
                android:textSize="@dimen/SubTitle" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>